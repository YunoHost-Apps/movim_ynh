{
    "name": "Movim",
    "id": "movim",
    "packaging_format": 1,
    "description": {
        "en": "Web-based cross-platform XMPP client",
        "fr": "Client XMPP multiplateforme basÃ© sur le Web"
    },
    "version": "0.20~ynh1",
    "url": "https://movim.eu",
    "upstream": {
        "license": "AGPL-3.0-or-later",
        "website": "https://movim.eu",
        "demo": "https://nl.movim.eu/?login",
        "admindoc": "https://github.com/movim/movim/wiki",
        "code": "https://github.com/movim/movim",
        "cpe": "cpe:2.3:a:movim:movim"
    },
    "license": "AGPL-3.0-or-later",
    "maintainer": {
        "name": "",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 11.0.9"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php8.0-fpm",
        "postgresql",
        "metronome"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/movim",
                "default": "/movim"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "password",
                "type": "password"
            }
        ]
    }
}