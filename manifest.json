{
    "name": "Movim",
    "id": "movim",
    "packaging_format": 1,
    "description": {
        "en": "Web-based cross-platform XMPP client",
        "fr": "Client XMPP multiplateforme basÃ© sur le Web"
    },
    "version": "0.19~ynh1",
    "url": "https://movim.eu",
    "license": "AGPL-3.0-or-later",
    "maintainer": {
        "name": "",
        "email": ""
    },
    "requirements": {
        "yunohost": ">= 4.1.7"
    },
    "multi_instance": false,
    "services": [
        "nginx",
        "php7.3-fpm",
        "postgresql",
        "metronome"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/movim",
                "default": "/movim"
            },
            {
                "name": "admin",
                "type": "user",
                "example": "johndoe"
            },
            {
                "name": "password",
                "type": "password",
                "example": "Choose a password"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            }
        ]
    }
}
